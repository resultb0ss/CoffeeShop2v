<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainFragmentButtonMainStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/half_white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mainFragmentButtonImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainFragmentButtonTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/smallMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mainFragmentButtonHorizontalLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>